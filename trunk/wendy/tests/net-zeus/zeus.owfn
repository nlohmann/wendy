PLACE
INTERNAL p1, p2, p3, p4;
INPUT offer, invoice;
OUTPUT accept, reject;

INITIALMARKING p1: 1;
FINALCONDITION (p4=1 AND ALL_OTHER_PLACES_EMPTY);

TRANSITION t1
CONSUME p1, offer;
PRODUCE p2;

TRANSITION t2
CONSUME p2;
PRODUCE p1, reject;

TRANSITION t3
CONSUME p2;
PRODUCE p3, accept;

TRANSITION t4
CONSUME p3, invoice;
PRODUCE p4;
